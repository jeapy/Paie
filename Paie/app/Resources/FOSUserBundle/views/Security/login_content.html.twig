{% trans_default_domain 'FOSUserBundle' %}

              <div class="box">
                  <div class="content-wrap">
                      <img src="{{ asset('bundles/jpfichepaie/img/logo.png') }}">

                    <h1 class="space">AUTHENTIFICATION</h1>
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}


                <form action="{{ path("fos_user_security_check") }}" method="post"  >
                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    {% endif %}

                    <label for="username">{{ 'security.login.username'|trans }}</label>
                    <input  class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

                 
                    <label for="password">{{ 'security.login.password'|trans }}</label>
                    <input  class="form-control" type="password" id="password" name="_password" required="required" />

                <div>
                    <input  class="form-control" type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label  for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                </div>
                    <input class="btn btn-success signup" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />           
                     
                   
                </form>
     </div>
                 
</div>

            <div class="already">
                  <p>Vous avez oubli√© votre email ou votre mot de passe?</p><br>
                  <p><a href="{{ path("fos_user_registration_register") }}">Ouvrir un compte</a></p>
                  <p><a href="{{ path("fos_user_resetting_request") }}">Modifier Mot de passe</a></p>
              </div>

   
  